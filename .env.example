# Sol City - Environment Variables
# Copy this file to .env.local and fill in your values

# App
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Helius (Solana wallet data)
HELIUS_API_KEY=your-helius-api-key
NEXT_PUBLIC_HELIUS_RPC_URL=https://mainnet.helius-rpc.com/?api-key=your-helius-api-key
NEXT_PUBLIC_HELIUS_WS_URL=wss://mainnet.helius-rpc.com/?api-key=your-helius-api-key

# Jupiter (token prices)
NEXT_PUBLIC_JUPITER_API_KEY=your-jupiter-api-key
NEXT_PUBLIC_JUPITER_BASE=https://lite-api.jup.ag

# DeFiLlama (no key needed)
NEXT_PUBLIC_DEFILLAMA_BASE=https://api.llama.fi

# Vybe Network (PnL, trading stats)
VYBE_API_KEY=your-vybe-api-key

# Stripe (optional - only needed for payments)
STRIPE_SECRET_KEY=sk_test_your-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Cron (Vercel sets this automatically in production)
CRON_SECRET=
